<Window x:Class="Spines.FakeTenhouServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="WidthAndHeight"
        Closing="OnClosing"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="20"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="20"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="20"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="10"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="10"/>
    </Grid.RowDefinitions>
      
    <Button Grid.Row="1" Grid.Column="1" Click="OnEnableRedirection" Content="Start" Width="100" IsEnabled="{Binding CanEnable}"/>
    <Button Grid.Row="1" Grid.Column="3" Click="OnDisableRedirection" Content="Stop" Width="100" IsEnabled="{Binding CanDisable}"/>
    
  </Grid>
</Window>
