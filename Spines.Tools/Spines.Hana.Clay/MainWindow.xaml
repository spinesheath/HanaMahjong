<Window x:Class="Spines.Hana.Clay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hana Clay" Height="350" Width="525"
        Icon="Resources/machikae.ico">

    <Window.Resources>
        <SolidColorBrush x:Key="FennelPrimaryLight" Color="#FBFFE2"/>
        <SolidColorBrush x:Key="FennelPrimaryMedium" Color="#B7AF84"/>
        <SolidColorBrush x:Key="FennelPrimaryDark" Color="#706841"/>
        <SolidColorBrush x:Key="FennelAccentLight" Color="#AF1650"/>
        <SolidColorBrush x:Key="FennelAccentMedium" Color="#560B28"/>
        <SolidColorBrush x:Key="FennelAccentDark" Color="#120022"/>
    </Window.Resources>
    
    <Grid>
        <DockPanel>
            <ContentControl x:Name="HeaderContent" DockPanel.Dock="Top" Height="36" Margin="0,0,36,0"/>
            <ContentControl x:Name="MainContent"/>
        </DockPanel>
        <Button Click="OnAbout" HorizontalAlignment="Right" VerticalAlignment="Top" Width="36" Height="36">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{StaticResource FennelPrimaryLight}" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Path Stroke="{StaticResource FennelPrimaryMedium}" StrokeThickness="5" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                              Data="M 6,7 L 28,7 M 6,17 L 28,17 M 6,27 L 28,27" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>

